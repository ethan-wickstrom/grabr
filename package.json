{
  "name": "@ethan-wickstrom/grabr",
  "version": "1.0.0",
  "author": "Ethan Wickstrom",
  "description": "React element context extraction for AI coding agents.",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./grabr": {
      "types": "./dist/grabr.d.ts",
      "import": "./dist/grabr.js",
      "default": "./dist/grabr.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "keywords": [
    "ai",
    "react",
    "devtools",
    "automation",
    "selector",
    "prompt"
  ],
  "scripts": {
    "clean": "bun run ./scripts/clean.ts",
    "build:js": "bun build --target=bun --format=esm --outdir=dist --packages=external --sourcemap=external ./src/index.ts ./src/grabr.ts",
    "build:types": "bunx tsc -p tsconfig.build.json",
    "build": "bun run clean && bun run build:js && bun run build:types",
    "verify": "bun run ./scripts/verify.ts",
    "test": "bun test",
    "demo": "bun --hot ./examples/demo.ts",
    "prepack": "bun run verify"
  },
  "dependencies": {
    "bippy": "^0.5.25"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.0.0"
  }
}
